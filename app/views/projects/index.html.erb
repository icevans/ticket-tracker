<%= render 'shared/title', title: 'Projects' %>

<table class="table is-fullwidth is-striped">
  <thead>
    <th>Name</th>
    <th class="has-text-centered">Open Tickets</th>
    <th class="has-text-centered">Total Tickets</th>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <p class="has-text-weight-bold"><%= link_to project.name, project_path(project) %></p>
          <p><%= project.description %></p>
        </td>
        <td class="has-text-centered"></td>
        <td class="has-text-centered"></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if logged_in? %>
  <div class="buttons">
  <%= link_to 'New Project', new_project_path, class: 'button is-primary is-outlined' %>
</div>
<% end %>

